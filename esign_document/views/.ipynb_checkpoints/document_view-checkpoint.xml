<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="esign_document_view_form">
            <field name="name">esign.document.form</field>
            <field name="model">esign.document</field>
            <field name="arch" type="xml">
                <form string="Esign Form" create="false">
                    <header>
                        <button name="button_draft" 
                                class="oe_highlight" 
                                states="draft" 
                                string="Enviar a visar"                                
                                type="object"
                                groups="esign_document.group_esign_initiator"
                                help="Enviar documento a revisiÃ³n"/>
                        <button name="button_cancell_draft" 
                                class="oe_highlight" 
                                states="draft" 
                                string="Cancelar" 
                                type="object"
                                groups="esign_document.group_esign_initiator"
                                help="Cancelar proceso de firma de documento"/>
                        
                        <button name="button_approver" 
                                class="oe_highlight"
                                states="visa"
                                string="Visar" 
                                type="object"
                                groups="esign_document.group_esign_approver"
                                help="Visar documento"/>
                        <button name="button_cancell_visa" 
                                class="oe_highlight" 
                                states="visa" 
                                string="Cancelar" 
                                type="object"
                                groups="esign_document.group_esign_approver"
                                help="Cancelar proceso de firma de documento"/>
                        
                        <button name="button_sign" 
                                class="oe_highlight" 
                                states="sign" 
                                string="Firmar" 
                                type="object"
                                help="Firmar documento"/>
                        <button name="button_cancell_sign" 
                                class="oe_highlight" 
                                states="sign" 
                                string="Cancelar" 
                                type="object"
                                help="Cancelar proceso de firma de documento"/>
                        
                        <field
                                name="state"
                                widget="statusbar"
                                nolabel="1"
                                options="{'clickable': False}"
                                statusbar_visible="draft,visa,sign,signed"/>
                    </header>
                    <sheet>   
                        <h1>
                            <group>
                                <field name="name" attrs="{'invisible': [('name', '=', False)],
                                                          'readonly': [('state', 'in', ('draft','visa','sign','signed'))]}"/>
                            </group>                               
                        </h1>
                        <h3>
                            <group>                                
                                <field name="active" attrs="{'invisible': 1}"/>
                                <field name="creator_id" attrs="{'invisible': 1}"/>                                
                                <field name="is_creator" attrs="{'invisible': 1}"/>
                                <field name="type" attrs="{'readonly':[('is_creator', '!=', True)]}"/>
                            </group>
                        </h3>   
                        <group>
                            <field name="description" attrs="{'readonly': [
                                                                           ('state', 'in', ('visa','sign','signed'))]}"/>
                            <field name="file" filename="file_name" attrs="{'invisible': [
                                                                               ('state', 'in', ('visa','sign','signed'))],
                                                                           'readonly': [
                                                                               ('state', 'in', ('visa','sign','signed'))]}"/>
                            <field name="file_name" attrs="{'invisible': 1}"/>
                        </group>
                        <notebook>
                            <page string="Documento" attrs="{'invisible': [('state', '=', False)]}">
                                <group>
                                    <!-- <field name="file" filename="file_name" widget="pdf_viewer"/>-->
                                    <field name="file_view" 
                                           attrs="{'invisible': [('state', '=', False)],
                                                  'readonly': [('state', 'in', ('visa','sign','signed'))]}"
                                           widget="pdf_viewer"/>
                                </group>
                            </page>
                            <page string="Firmante">
                                <group>
                                    <field name="employee_id" attrs="{'readonly': [
                                                                           ('state', 'in', ('visa','sign','signed'))]}"/>
                                </group>
                            </page>
                            <page string="Aprobadores">
                                <field name="approver_ids" attrs="{'readonly': [
                                                                           ('state', 'in', ('visa','sign','signed'))]}">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="name"/>
                                        </group>
                                    </form>
                                </field>
                            </page>                            
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="esign_document_view_list">
            <field name="name">esign.document.list</field>
            <field name="model">esign.document</field>
            <field name="arch" type="xml">
                <tree string="Esign List">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="esign_document_view_search">
            <field name="name">esign.document.search</field>
            <field name="model">esign.document</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
    </data>
</odoo>