<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_esign_admin" model="res.groups">
        <field name="name">Esign / Admin</field>
    </record>
    <record id="group_esign_initiator" model="res.groups">
        <field name="name">Esign / Initiator</field>
    </record>
    <record id="group_esign_approver" model="res.groups">
        <field name="name">Esign / Approver</field>
    </record>
    
    <record id="only_Active_modify" model="ir.rule">
        <field name="name">Only active sign process can be modified</field>
        <field name="perm_read" eval="0"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('active','=',True)]</field>
        <field name="model_id" ref="model_esign_document"/>
    </record>
</odoo>